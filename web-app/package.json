{
  "name": "time-tracker",
  "description": "Track you tasks and categorize them.",
  "version": "0.2.0",
  "private": true,
  "author": "hnnsb",
  "main": "public/main.js",
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron:serve": "concurrently -k \"cross-env BROWSER=none npm start\" \"npm run electron:start\"",
    "electron:build": "npm run build && electron-builder -c.extraMetadata.main=build/main.js --win",
    "electron:build-win": "npm run build && electron-builder -c.extraMetadata.main=build/main.js --win",
    "electron:build-macos": "npm run build && electron-builder -c.extraMetadata.main=build/main.js --mac",
    "electron:build-linux": "npm run build && electron-builder -c.extraMetadata.main=build/main.js --linux",
    "electron:start": "wait-on tcp:3000 && electron ."
  },
  "build": {
    "appId": "de.hnnsb.time-tracker.desktop",
    "productName": "Time-Tracker",
    "icon": "icon.png",
    "files": [
      "dist/**/*",
      "build/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    },
    "nsis": {
      "allowElevation": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "hnnsb",
        "repo": "time-tracker",
        "releaseType": "prerelease"
      }
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.108",
    "@types/react": "^18.3.8",
    "@types/react-dom": "^18.3.0",
    "bootstrap": "^5.3.3",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "electron-is-dev": "^3.0.1",
    "react": "^18.3.1",
    "react-bootstrap": "^2.10.4",
    "react-dom": "^18.3.1",
    "react-icons": "^5.3.0",
    "react-router-dom": "^6.26.2",
    "react-scripts": "^5.0.1",
    "tailwind": "^4.0.0",
    "typescript": "^4.9.5",
    "uuid": "^10.0.0",
    "wait-on": "^8.0.1",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "electron": "^32.1.2",
    "electron-builder": "^25.0.5",
    "globals": "^15.9.0",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.12"
  }
}
